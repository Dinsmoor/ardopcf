#	ardopcf Makefile for mingw32-make.exe from winlibs Intel/AMD 32-bit or 64-bit

OBJS = ARDOPCommon.o WinSerial.o KISSModule.o pktARDOP.o pktSession.o BusyDetect.o Waveout.o \
ARDOPC.o ardopSampleArrays.o ARQ.o FFT.o FEC.o HostInterface.o Modulate.o rrs.o sendframe.o \
SoundInput.o TCPHostInterface.o SCSHostInterface.o hid.o wav.o RXO.o sdft.o rawhid.o \
ws_server.o Webgui.o webgui_html.o webgui_js.o

# Configuration:
CFLAGS = -DLINBPQ -MMD -g 
CC = gcc

vpath %.c ../ARDOPCommonCode ../lib/rockliff ../lib/hid ../lib/bpq32 ../lib/rawhid ../lib/ws_server
vpath %.h ../ARDOPCommonCode ../lib/rockliff
vpath %.o ./
			                       
all: ardopcf
			
ardopcf: $(OBJS)
	gcc $(OBJS) -Xlinker -Map=output.map -lm -lpthread -lwsock32 -lwinmm -lsetupapi -lws2_32 -o ardopcf


-include *.d

clean :
	del ardopcf.exe $(OBJS) $(OBJS:.o=.d) output.map

